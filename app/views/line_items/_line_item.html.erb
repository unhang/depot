<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
  <td><%= button_to 'Descrease', line_item, method: :put, remote: true %>&nbsp;<%= line_item.quantity %>&nbsp;&times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency line_item.total_price %></td>
</tr>
